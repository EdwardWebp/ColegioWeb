@inherits LayoutComponentBase
<div class="layout-container">
    <!-- Header -->
    <header class="header navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="">COLEGIO WEB</a>

            <!-- Toggle Button for Mobile Menu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <i class="bi bi-house-door"></i> Home
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="counter">
                            <i class="bi bi-plus-square"></i> Counter
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="weather">
                            <i class="bi bi-cloud-sun"></i> Weather
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Asignatura">
                            <i class="bi bi-journal"></i> Asignatura
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Estudiante">
                            <i class="bi bi-backpack"></i> Estudiante
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Calificaciones">
                            <i class="bi bi-mortarboard"></i> Calificaciones
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Asistencia">
                            <i class="bi bi-check2-square"></i> Asistencia
                        </NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            @Body
        </div>
    </main>
</div>
<style>
    /* General Layout */
    .layout-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow: hidden;
    }

    /* Header */
    .header {
        background-color: #007bff; /* Color de fondo azul */
    }

    .navbar-nav .nav-link {
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .navbar-nav .nav-link:hover {
        transform: translateY(-3px);
        color: #f8f9fa;
    }

    .navbar-nav .nav-link i {
        margin-right: 8px;
        font-size: 1.2rem;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        padding: 2rem;
        animation: fadeIn 1s ease-in-out;
    }

 

    /* Animación del menú desplegable */
    .navbar-collapse {
        transition: max-height 0.5s ease-in-out;
    }

    .navbar-collapse.collapse {
        max-height: 0;
    }

    .navbar-collapse.show {
        max-height: 500px;
    }

  
    }
 </style>

